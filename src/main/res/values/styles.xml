        <!--<item name="popupMenuStyle">@style/PopupMenu</item>-->
        <!--<item name="android:textColor">#000</item>-->
    </style>


    <style name="AppTheme.AppBarOverlay.Dark.Text" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--<item name="popupMenuStyle"> @style/Widget.AppCompat.Light.ActionButton.Overflow</item>-->
        <!--<item name="android:popupBackground">@color/smooth_withe</item>-->
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.DeviceDefault.Light.PopupMenu">
        <!--<item name="android:popupBackground">@color/smooth_withe</item>-->
        <item name="android:textColor">#000</item>
    </style>

    <style name="Editor.Field.TextView" parent="@android:style/TextAppearance.Widget.TextView">
        <!--<item name="android:popupBackground">@color/smooth_withe</item>-->
        <!--<item name="android:textSize"></item>-->
        <item name="android:textColor">#666</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

